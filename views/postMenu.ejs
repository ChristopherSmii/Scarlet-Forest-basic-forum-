<%-include('./navbar.ejs')%>
<body>
    <div class="container my-4 bg-dark">
        <div class="row p-1">
            <div class="col-12 my-2"><a href="/poster" class="btn btn-danger">New post</a></div>
            
            <%for(let i=0;i<data.length;i++){%>
            <div class="col-md-6 col-12 col-lg-4 col-xl-3">
                <div class="card m-1">
                    <div class="card-header">Post - #<%=data[i].post_id%></div>
                    <div class="card-body">
                        <div class="card-title"><h5><%=data[i].post_title%></h5></div>
                        <hr>
                        <div class="card-text"><%=data[i].post_body%></div>
                        <div class="card-footer p-2 mt-2"><a href="/post/<%=data[i].post_id%>" class="btn btn-danger">Reply</a></div>
                    </div>
                </div>
            </div>
            <%}%>
        </div>
    </div>
</body>