<%-include('./navbar.ejs')%>

<div class="container bg-dark my-4">
    <div class="row p-1">
        <%for(let i=0;i<data.length;i++){%>
            <div class="col-lg-2 col-md-3 col-6 p-1">
                <div class="card" style="height: 100%;">
                    <div class="card-header">#<%=data[i].member_id%></div>
                    <img src="<%=data[i].icon_path%>" alt="member icon" class="card-img">
                    <div class="card-body" style="height: max-content;">
                        <%=data[i].member_name%>
                    </div>
                    <div class="card-footer">
                        <a href="view/<%=data[i].member_id%>">view</a>
                    </div>
                </div>
            </div>
        <%}%>
    </div>
</div>